{
  "name": "react-native-drivekit",
  "version": "1.7.0",
  "description": "React Native interface for DriveKit",
  "repository": "https://github.com/DriveQuantPublic/react-native-drivekit.git",
  "author": "DriveQuant",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@arkweid/lefthook": "^0.7.7",
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "cz-conventional-changelog": "3.3.0",
    "lerna": "^6.0.3"
  },
  "scripts": {
    "commit": "cz",
    "bumpversion": "lerna version --conventional-commits --no-private",
